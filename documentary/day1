#include <iostream>
using namespace std;

int main() {
    int n, sum;

    cout << "Enter a positive integer: ";
    cin >> n;

    sum = (n * (n + 1)) / 2;

    cout << "The sum of natural numbers up to " << n << " is: " << sum << endl;

    return 0;
}



output:Enter a positive integer: 5
The sum of natural numbers up to 5 is: 15



